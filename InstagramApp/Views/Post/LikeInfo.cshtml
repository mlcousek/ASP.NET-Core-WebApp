@using Azure.Core
@model List<User>

@{
    ViewData["Title"] = "Lajky";
}
<h1>Lajky příspěvku</h1>

@if (Model.Count() == 0)
{
    <p>Žádný uživatel ještě neolajkoval zvolený příspěvek</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                Uživatelé, kteří olajkovali příspěvek
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                </tr>
            }

    </table>
}

<div>
    <a class="btn btn-secondary" href="@ViewBag.PreviousUrl">Zpět na příspěvky</a>
</div>
